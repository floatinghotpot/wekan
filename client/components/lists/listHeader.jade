template(name="listHeader")
  .list-header.js-list-header
    +inlinedForm
      +editListTitleForm
    else
      h2.list-header-name(
        class="{{#if currentUser.isBoardMember}}js-open-inlined-form is-editable{{/if}}")
        = title
      if currentUser.isBoardMember
        a.list-header-menu-icon.fa.fa-ellipsis-v.js-open-list-menu

template(name="editListTitleForm")
  .list-composer
    input.list-name-input.full-line(type="text" value=title autofocus)
    .edit-controls.clearfix
      button.primary.confirm(type="submit") {{_ 'save'}}
      a.fa.fa-times-thin.js-close-inlined-form

template(name="listActionPopup")
  if cards.count
    ul.pop-over-list
      li: a.js-select-cards {{_ 'list-select-cards'}}
      li: a.js-move-cards {{_ 'list-move-cards'}}
    hr
  ul.pop-over-list
    li: a.js-add-card {{_ 'add-card'}}
    li: a.js-import-card-other-board {{_ 'import-card-other-board'}}
    li: a.js-import-card {{_ 'import-card'}}
  hr
  ul.pop-over-list
    if cards.count
      li: a.js-archive-cards {{_ 'list-archive-cards'}}
    li: a.js-close-list {{_ 'archive-list'}}
  hr
  ul.pop-over-list
    li: a.js-list-settings {{_ 'settings'}}

template(name="listMoveCardsPopup")
  +boardLists

template(name="importCardFromOtherBoardPopup")
  ul.pop-over-list
    each boards
      li
        if($eq currentBoard._id _id)
          a.disabled {{title}} ({{_ 'current'}})
        else
          a.js-select-list-from-board {{title}}

template(name="importCardFromOtherListPopup")
  ul.pop-over-list
    each lists
      unless archived
        li
          a.js-import-card-from-list {{title}}

template(name="boardLists")
  ul.pop-over-list
    each currentBoard.lists
      li
        if($eq ../_id _id)
          a.disabled {{title}} ({{_ 'current'}})
        else
          a.js-select-list= title

template(name="listArchiveCardsPopup")
  p {{_ 'list-archive-cards-pop'}}
  input.js-confirm.negate.full(type="submit" value="{{_ 'archive-all'}}")

template(name="listSettingsPopup")
  p {{_ 'when-drop-card-to-list'}}
  ul.pop-over-list
    li
      a.js-select-none
        i.fa.fa-clock-o
        | {{_ 'none-task-time'}}
        if noStatus
          i.fa.fa-check
    li
      a.js-select-todo
        i.fa.fa-clock-o
        | {{_ 'todo-task-time'}}
        if($eq list.status "todo")
          i.fa.fa-check
    li
      a.js-select-doing
        i.fa.fa-clock-o
        | {{_ 'doing-task-time'}}
        if($eq list.status "doing")
          i.fa.fa-check
    li
      a.js-select-done
        i.fa.fa-clock-o
        | {{_ 'done-task-time'}}
        if($eq list.status "done")
          i.fa.fa-check
  hr
  h3
    i.fa.fa-user
    | {{_ 'members'}}
  each members
    +userAvatar(userId=this listId=list._id)
    | {{! XXX Hack to hide syntaxic coloration /// }}
  if currentUser.isBoardMember
    a.member.add-member.js-add-members(title="{{_ 'list-members-title'}}")
      i.fa.fa-plus

template(name="listMembersPopup")
  ul.pop-over-list.js-list-member-list
    each board.members
      li.item(class="{{#if isListMember}}active{{/if}}")
        a.name.js-select-member(href="#")
          +userAvatar(userId=user._id listId=list._id)
          span.full-name
            = user.profile.fullname
            | (<span class="username">{{ user.username }}</span>)
          if isListMember
            i.fa.fa-check
